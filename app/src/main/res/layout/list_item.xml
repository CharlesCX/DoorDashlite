<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="@dimen/cover_image_width"
        android:layout_height="@dimen/cover_image_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/cover_image_marginLeft"
        android:layout_marginRight="@dimen/cover_image_marginRight"/>

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/restaurant_name_textSize"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_toEndOf="@id/cover_image"
        android:layout_marginTop="@dimen/restaurant_name_marginTop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/restaurant_name_marginEnd"/>

    <TextView
        android:id="@+id/restaurant_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/restaurant_description_textSize"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/cover_image"
        android:layout_below="@id/restaurant_name"/>

    <TextView
        android:id="@+id/restaurant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/restaurant_status_textSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:text="status"
        android:layout_marginBottom="@dimen/restaurant_status_marginBottom"
        android:layout_marginEnd="@dimen/restaurant_status_marginEnd"/>

</RelativeLayout>